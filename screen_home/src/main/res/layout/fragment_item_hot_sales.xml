<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="182dp">

    <ImageView
        android:id="@+id/imageViewPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/images" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeftVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <ImageView
        android:id="@+id/imageViewEllipseBgIconIsNew"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_ellipse_orange"
        app:layout_constraintStart_toStartOf="@id/guidelineLeftVertical"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="@string/textNew"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize10"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageViewEllipseBgIconIsNew"
        app:layout_constraintEnd_toEndOf="@id/imageViewEllipseBgIconIsNew"
        app:layout_constraintStart_toStartOf="@id/imageViewEllipseBgIconIsNew"
        app:layout_constraintTop_toTopOf="@id/imageViewEllipseBgIconIsNew" />

    <LinearLayout
        android:id="@+id/containerTitle"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/apcButtonBuyNow"
        app:layout_constraintStart_toStartOf="@id/guidelineLeftVertical"
        app:layout_constraintTop_toBottomOf="@id/imageViewEllipseBgIconIsNew">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/textSize25"
                android:textStyle="bold"
                tools:text="Iphone 12" />

            <View
                android:id="@+id/trait"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/colorTextWhite" />

        </LinearLayout>


        <TextView
            android:id="@+id/textViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/textSize11"
            tools:text="Súper. Mega. Rápido." />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apcButtonBuyNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textSize24"
        android:background="@drawable/bg_btn_vp_hot_sales"
        android:gravity="center"
        android:text="@string/textBuyNow"
        android:textSize="@dimen/textSize11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineLeftVertical"
        app:layout_constraintTop_toBottomOf="@id/containerTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>