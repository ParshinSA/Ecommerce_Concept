<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBgLiteDarkWhite"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/activityContainerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tabLayoutBottomNavMenu" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutBottomNavMenu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_tab_menu"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:tabGravity="center"
        app:tabIconTint="@color/itemBottomNavColorWhite"
        app:tabIndicatorColor="@color/bgBottomNavColorDarkBlue"
        app:tabRippleColor="@color/bgBottomNavColorDarkBlue">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout="@layout/first_item_tab_menu_explorer" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_menu_cart" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_menu_favorite" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_menu_profile" />

    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>